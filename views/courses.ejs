<style>
   .logo .large-logo{
      width: 200px;
      height: 65px;

   }
   .logo .small-logo{
      
      width: 112px;
      height: 85px;
      border-radius: 20px;
  }
   .logo img{
      width: 100%;
      height: 100%;
   }
   @media screen and (max-width: 1600px) {
      .logo .large-logo {
          display: block; /* Hide the large logo on small screens */
      }
      .logo .small-logo {
          display: none; /* Show the small logo on small screens */
      }
  }
  @media screen and (max-width: 600px) {
      .logo .large-logo {
          display: none; /* Hide the large logo on small screens */
      }
      .logo .small-logo {
          display: block; /* Show the small logo on small screens */
      }
  }

  ul {
   list-style-type: none;
   padding: 0;
 }

 li {
   background-color: #e0f7fa; /* Light blue background */
   margin-bottom: 10px;
   padding: 15px;
   border: 2px solid #0288d1; /* Border color */
   border-radius: 8px;
   overflow: hidden; /* Clear the floats */
   font-size: 18px;
 }

 li div {
   float: left;
   width: 70%;
 }

 li div:last-child {
   float: right;
   width: 30%;
   text-align: right; /* Align button to the right */
 }

 strong {
   color: #0277bd; /* Strong text color */
 }
 .button{
   margin-top: 20px;
 }

.a {
   background-color: blueviolet; /* Green button background */
   color: white;
  
   padding: 15px 25px;
   border: none;
   border-radius: 4px;
   cursor: pointer;
   font-size: 14px;
 }

 .a:hover {
   background-color: #84bfd1; /* Darker green on hover */
 }
 .datetime {
   font-weight: bold;
   font-size: 18px; /* Increase font size */
   color: #e74c3c; /* Color for date and time */
 }
</style>

